(defun find-str-pos (str slist)
  "検索文字列の先頭のpositionをリストで返す"
  (let ((str-len (length str)))
    (loop :for i :across slist
	  :when (and (eq i (elt str 0))
	    (equal str (subseq slist cnt (+ cnt str-len))))
	    :collect cnt
	  :count i :into cnt)))		; => FIND-STR-POS


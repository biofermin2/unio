(defun cat-files (&rest files)
  "複数ファイルを表示"
  (dolist (f files)
    (with-open-file (in f :direction :input)
      (let (buff)
	(loop
	  (if (setq buff (read in nil))
	      (format t "~(~a~)~&" buff)
	      (return)))))))				    ; => CAT-FILES

(defun parse-tree (slist)
  "文字列リストを１文字ずつ解析"
  (loop :for char :across slist
	:with depth = 0
	:when (eq char #\()
	  :do (incf depth)
	:when (eq char #\))
	  :do (decf depth)
	:collect (list char depth)))	; => PARSE-TREE

